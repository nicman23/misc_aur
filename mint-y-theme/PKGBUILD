# Maintainer:   Νικόλαος Κυριάκος Φυτίλης <n-fit@live.com>

_pkgbase=mint-y-theme
pkgname="${_pkgbase}-git"
pkgver=660ab55
pkgrel=1
pkgdesc="Default themes from Linux Mint - Mate version"
url="http://mate-desktop.org"
arch=('any')
license=('GPL')
makedepends=('gdk-pixbuf2' 'git' 'glib2' 'libxml2' 'ruby-sass')
optdepends=('gtk-engine-murrine: GTK2 theme engine')
source=("git+https://github.com/linuxmint/mint-y-theme.git")
sha1sums=('SKIP')

pkgver() {
  cd "${srcdir}/${_pkgbase}"
  git rev-parse --short HEAD | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
    cd "$srcdir/${_pkgbase}/src"
    python build-themes.py
}

package() {
    mkdir -p $pkgdir/usr/share/
    cd "${srcdir}/${_pkgbase}"
    cp -R usr/share/themes $pkgdir/usr/share/
    chmod -R 755 $pkgdir/usr/share/
}
